generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  name     String
  Article  Article[]
  comments Comment[]
  Like     Like[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  authorId  Int
  articleId Int
  createdAt DateTime @default(now())
  Article   Article  @relation(fields: [articleId], references: [id])
  author    User     @relation(fields: [authorId], references: [id])
}

model Article {
  id        Int       @id @default(autoincrement())
  title     String
  content   String
  authorId  Int
  createdAt DateTime  @default(now())
  User      User      @relation(fields: [authorId], references: [id])
  Comment   Comment[]
  Like      Like[]
}

model Like {
  id        Int     @id @default(autoincrement())
  userId    Int
  articleId Int
  Article   Article @relation(fields: [articleId], references: [id])
  User      User    @relation(fields: [userId], references: [id])
}
